<%= stylesheet_link_tag 'element', media: 'all', 'data-turbolinks-track' => true %>
  <div class="container">
    <div class="row justify-content-center">
      <h1><%= @element["name"] %></h1>
    </div>
  </div>

  <%= link_to 'Back', table_index_path, class:'link' %>

  <div class="main">
    <div class="block">
      <section class="<%= @element["category"]%>">
        <span class="show"><%= @element["number"] %></span>
        <h2 class="element"><%= @element["symbol"] %></h2>
        <p class="element"><%= @element["name"] %></p>
        <p class="element"><%= @element["atomic_mass"] %></p>
      </section>
    </div>

    <div class="block">
      <table>
        <% @element.each do |key, value|%>
          <tr>
            <td><%= key %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </table>

      
    </div>
  </div>